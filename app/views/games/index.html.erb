<h1>Take Me Out to the Ball Game!</h1>
<h3>Current Game Listings</h3>

<table>
  <td><%= link_to 'Games', games_path %></td>
  <td><%= link_to 'Teams', teams_path %></td>
  <td><%= link_to 'Game Types', game_types_path %></td>
</table>

<table>
  <tr>
    <th>Id</th>
    <th>Date</th>
    <th>Team 1</th>
    <th>Team 2</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.date %></td>
    <td><%= team_object(game.team_1_id) %></td>
    <td><%= team_object(game.team_2_id) %></td>
    <td><%= game.game_type.name %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

