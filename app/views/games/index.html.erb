<h1>Listing games</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Date</th>
    <th>Team 1</th>
    <th>Team 2</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.date %></td>
    <td><%= game.team_1_id %></td>
    <td><%= game.team_2_id %></td>
    <td><%= game.type %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

